package aula2;

import java.util.Scanner;

public class desafioPizzaria {

	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
		
		//escopo de variáveis

		String nomeUsuario = "jess", usuarioInputado;
		
		System.out.println("Digite seu usuário");
		usuarioInputado = ler.next();
		
		for (int tentativas=1; tentativas < 3; tentativas ++) {
			if(nomeUsuario.equals(usuarioInputado)) {
				System.out.println("Bem vinde a Pizzaria");
			}
			
			else {
				System.out.println("Não");
			}
		}
		
	}

}
