package aula2;

import java.util.Scanner;

public class desafioPizzaria {

	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
		
		//escopo de variáveis
		String nomeUsuario = "jessica", usuarioInputado;
		
		System.out.println("Digite seu usuário");
		
		usuarioInputado = ler.next();
		
		for (int tentativas=1; tentativas < 3; tentativas ++) {
			if(nomeUsuario.equals(usuarioInputado)){
				System.out.println(" ______   __     ______     ______     ______     ______     __     ______        _____     ______        __   __   __     __         ______    \r\n"
						+ "/\\  == \\ /\\ \\   /\\___  \\   /\\___  \\   /\\  __ \\   /\\  == \\   /\\ \\   /\\  __ \\      /\\  __-.  /\\  __ \\      /\\ \\ / /  /\\ \\   /\\ \\       /\\  __ \\   \r\n"
						+ "\\ \\  _-/ \\ \\ \\  \\/_/  /__  \\/_/  /__  \\ \\  __ \\  \\ \\  __<   \\ \\ \\  \\ \\  __ \\     \\ \\ \\/\\ \\ \\ \\  __ \\     \\ \\ \\'/   \\ \\ \\  \\ \\ \\____  \\ \\  __ \\  \r\n"
						+ " \\ \\_\\    \\ \\_\\   /\\_____\\   /\\_____\\  \\ \\_\\ \\_\\  \\ \\_\\ \\_\\  \\ \\_\\  \\ \\_\\ \\_\\     \\ \\____-  \\ \\_\\ \\_\\     \\ \\__|    \\ \\_\\  \\ \\_____\\  \\ \\_\\ \\_\\ \r\n"
						+ "  \\/_/     \\/_/   \\/_____/   \\/_____/   \\/_/\\/_/   \\/_/ /_/   \\/_/   \\/_/\\/_/      \\/____/   \\/_/\\/_/      \\/_/      \\/_/   \\/_____/   \\/_/\\/_/ \r\n"
						+ "                                                                                                                                                \r\n"
						+ "");
				
			}
			else {
				System.out.println("Usuario incorreto, tente novamente");
				usuarioInputado = ler.next();
			}	
		}
		
		System.out.println("Você excedeu o limite de tentativas, não vai rolar :/");
	}

}
